{
  "name": "fastify-starter",
  "version": "4.27.0",
  "description": "Starter repo",
  "main": "src/server.ts",
  "author": "Rohan Nair <rn@rohan.ai>",
  "license": "MIT",
  "keywords": ["fastify", "typescript", "api", "drizzle", "starter"],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "biome check src/",
    "format": "biome format .",
    "------------------- BUILD -------------------": "",
    "build": "pnpm build:tsc && pnpm build:kita",
    "build:tsc": "tsc",
    "build:kita": "kita build",
    "typescheck": "tsc --noEmit",
    "------------------- DEV -------------------": "",
    "dev": "pnpm dev:kita && tsx watch src/server.ts",
    "dev:kita": "kita watch",
    "------------------- PROD -------------------": "",
    "start": "NODE_ENV=production node dist/server.js",
    "------------------- DB ------------------- ": "",
    "db:reset": "pnpm run db:destroy; pnpm run db:bootstrap; pnpm run db:migrate",
    "db:bootstrap": "./bin/bootstrap",
    "db:destroy": "./bin/destroy",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit push:pg"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.3",
    "@kitajs/cli": "^1.1.36",
    "@kitajs/ts-plugin": "^1.1.23",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.12.12",
    "drizzle-kit": "^0.21.4",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@dnlup/fastify-traps": "^3.0.2",
    "@fastify/cors": "^9.0.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@kitajs/runtime": "^1.1.19",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.2.0",
    "pino-pretty": "^11.1.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=9.1.0"
  }
}
